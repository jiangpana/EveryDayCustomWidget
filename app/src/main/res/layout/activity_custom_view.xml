<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jansir.widget.customwidget.BGButton
        android:id="@+id/mBtnClock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@drawable/ripple_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:text="时钟"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/px36sp"
        app:pressedSolid="@color/pressColor" />

    <com.jansir.widget.customwidget.BGButton
        android:id="@+id/mBtnTaiJi"
        app:layout_constraintTop_toBottomOf="@id/mBtnClock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@drawable/ripple_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:text="太极"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/px36sp"
        app:pressedSolid="@color/pressColor" />
    <com.jansir.widget.customwidget.BGButton
        android:id="@+id/mBtnRain"
        app:layout_constraintTop_toBottomOf="@id/mBtnTaiJi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@drawable/ripple_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:text="下雨"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/px36sp"
        app:pressedSolid="@color/pressColor" />
    <com.jansir.widget.customwidget.BGButton
        android:id="@+id/mBtnSun"
        app:layout_constraintTop_toBottomOf="@id/mBtnRain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@drawable/ripple_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:text="日升日落"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/px36sp"
        app:pressedSolid="@color/pressColor" />
</android.support.constraint.ConstraintLayout>