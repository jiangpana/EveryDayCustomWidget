<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.jansir.widget.view.sun.SunAnimationView
    android:id="@+id/mSunView"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px400dp"
    app:z_sun_circle_color="@color/text_666666"
    app:z_sun_font_color="@color/text_666666"
    app:z_sun_font_size="@dimen/px24sp"
    app:z_sun_circle_radius="150"/>

    <Button
        android:id="@+id/mBtnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/mSunView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>